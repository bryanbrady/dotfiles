# Debug
debug_msg () {
  if [ -f ${HOME}/.bash_debug ]; then
    echo `whoami`": $1"
  fi
}
debug_msg "entering .bash_include"

# Helpers
exists () {
  type -t $1 > /dev/null 2>&1
}

# Detect OS
case `uname` in
  "Darwin") BB_OS='mac'     ;;
  "Linux")  BB_OS='linux'   ;;
  *)        BB_OS='unknown' ;;
esac
export BB_OS

case ${BB_OS} in
  'mac')   BB_LS_COLOR='-G'          ;;
  'linux') BB_LS_COLOR='--color=tty' ;;
esac
export BB_LS_COLOR

debug_msg "leaving .bash_include"
